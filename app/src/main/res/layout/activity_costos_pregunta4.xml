<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/fondo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Número de pregunta -->
    <TextView
        android:id="@+id/numero_pregunta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#DADADA"
        android:text="4"
        android:textColor="#000"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/circulo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Botón atrás -->
    <ImageView
        android:id="@+id/atras"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/retroceso"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Pregunta -->
    <TextView
        android:id="@+id/pregunta_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¿Qué tan flexible eres en tu elección de universidad si una opción más económica ofrece una carrera similar?"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/numero_pregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Iconos -->
    <LinearLayout
        android:id="@+id/iconos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/pregunta_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icono_calculadora"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/calculadora"
            android:layout_marginHorizontal="8dp" />

        <ImageView
            android:id="@+id/icono_cartera"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/cartera"
            android:layout_marginHorizontal="8dp" />

        <ImageView
            android:id="@+id/crecimiento"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/crecimiento"
            android:layout_marginHorizontal="8dp" />

    </LinearLayout>

    <!-- Botones de opciones grandes -->
    <LinearLayout
        android:id="@+id/opciones"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/iconos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Depende de la calidad de la educación"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:padding="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Poco flexible, quiero mi primera opción sin importar el precio"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:padding="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Muy flexible, priorizo el costo"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:padding="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
