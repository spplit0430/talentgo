<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E3F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ENCABEZADO BLANCO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:background="@drawable/rounded_bottom_tuprogreso"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Botones barra superior -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/salida_olvido2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/retroceso" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

            <!-- Título y botón alineados a la izquierda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu Progreso"
                        android:textColor="#000000"
                        android:textSize="60sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="#2DA9F3"
                        android:text="La Vista Que Necesitas!"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_gravity="start" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- CONTENIDO DE LAS MÉTRICAS -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Métricas Vocación -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Métricas Vocación"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/fondo_redondeado_tuprogreso"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#FFFFFF"
                    android:clipToOutline="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- PieChart reemplaza al ImageView izquierdo -->
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChartVocacional"
                            android:layout_width="0dp"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_ver_perfil"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="Ver"
                        android:backgroundTint="#000000"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp" />
                </LinearLayout>

                <!-- Métricas Universidades -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Métricas Universidades y Costos"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/fondo_redondeado_tuprogreso"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#FFFFFF"
                    android:clipToOutline="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChartUniversidades"
                            android:layout_width="match_parent"
                            android:layout_height="300dp" />


                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChartCostos"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_ver_combinado"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="Ver"
                        android:backgroundTint="#000000"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- MENÚ LATERAL DERECHO -->
    <LinearLayout
        android:id="@+id/menu_lateral"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#884A708B"
        android:padding="16dp">

        <!-- Botón de salida -->
        <ImageView
            android:id="@+id/salida_olvido3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:src="@drawable/salida_menu"
            android:contentDescription="Cerrar sesión"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
