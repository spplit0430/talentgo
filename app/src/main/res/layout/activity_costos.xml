<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E3F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ENCABEZADO BLANCO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Botones barra superior -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/salida_olvido2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/retroceso" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

            <!-- Título y botón alineados a la izquierda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- Título y brújula en la misma línea -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Costos"
                        android:textColor="#000000"
                        android:textSize="60sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="45dp"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/costos"
                        android:contentDescription="costos"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <!-- Botón alineado a la izquierda -->

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#2DA9F3"
                    android:text="Tu Presupuesto Ideal"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"/>



            </LinearLayout>
        </LinearLayout>

        <!-- CONTENIDO SCROLLABLE CON TEXTO GRANDE Y CENTRADO -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elegir una carrera no solo implica conocer tus habilidades y gustos, sino también entender los costos asociados a cada opción. En esta sección, encontrarás información detallada sobre los valores de matrícula, inscripciones y otros gastos clave en diferentes universidades."
                    android:gravity="center"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="32dp" />

                <Button
                    android:id="@+id/btn_comenzar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comenzar"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#000000"
                    android:layout_marginTop="32dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="30dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- MENÚ LATERAL DERECHO -->
    <LinearLayout
        android:id="@+id/menu_lateral"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#884A708B"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:layout_marginTop="29dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/usuario"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="David García"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/btn_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu Progreso"
            android:paddingVertical="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agendar Cita"
            android:paddingVertical="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplicaciones a Universidades"
            android:paddingVertical="12dp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
