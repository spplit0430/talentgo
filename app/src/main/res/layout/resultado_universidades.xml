<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENEDOR PRINCIPAL CON FONDO -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen de fondo -->
        <ImageView
            android:id="@+id/fondo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo" />

        <!-- CONTENIDO PRINCIPAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/rounded_bottom_universidades"
                android:elevation="4dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESUMEN"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

            <!-- CONTENIDO -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="26dp"
                    android:gravity="center_horizontal">

                    <!-- Tarjeta resumen -->

                    <!-- Botón Finalizar -->
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:elevation="6dp"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/resultado_principal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:text="Eres Una Persona Independiente y Creativa"
                            android:textColor="#000000"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/descripcion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:gravity="center"
                            android:text="con ganas de explorar el mundo sin perder mi conexión con el idioma y la cultura. Prefiero una educación flexible que me permita equilibrar mis estudios con otros proyectos o intereses. La creatividad y la expresión son fundamentales en mi camino profesional, y busco una formación que me brinde herramientas para desarrollarme en estos ámbitos sin atarme a estructuras rígidas."
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imagen_resultado"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/vocacion1" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_finalizar"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Finalizar"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:backgroundTint="#59A6B8"
                        android:layout_marginTop="24dp"
                        android:padding="10dp"
                        android:layout_gravity="center" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

    <!-- MENÚ LATERAL DERECHO -->
    <LinearLayout
        android:id="@+id/menu_lateral"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#884A708B"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:layout_marginTop="29dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/usuario"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="David García"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/btn_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu Progreso"
            android:paddingVertical="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agendar Cita"
            android:paddingVertical="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplicaciones a Universidades"
            android:paddingVertical="12dp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
